import { createRouter, createWebHistory } from 'vue-router'
import HomeView from '../views/HomeView.vue'

{% for clas in model.classes -%}
import {{clas.name}}Table from '@/components/{{clas.name}}Table.vue';
import {{clas.name}}Details from '@/components/{{clas.name}}Details.vue';
{% endfor %}

const router = createRouter({
  history: createWebHistory(import.meta.env.BASE_URL),
  routes: [
    {
      path: '/',
      name: 'home',
      component: HomeView
    },
    {% for clas in model.classes -%}
    {
      path: '/{{ clas.name[0].lower() + clas.name[1:] }}/table',
      name: '{{clas.name}}Table',
      component: {{clas.name}}Table
    },
    {
      path: '/{{ clas.name[0].lower() + clas.name[1:] }}/details/:id',
      name: '{{clas.name}}Details',
      component: {{clas.name}}Details,
      props: true
    },
    {% endfor %}
  ]
})

export default router