  border: 1px solid #bdc5ca;
  margin-bottom: 2px;
  border-radius: 4px;
  padding: 3px 5px 3px 10px;
  display: flex;
  align-items: center;
}

.btn-delete-item {
  background-color: #d53243;
  border: none;
  border-radius: 3px;
  padding: 3px 7px;
}
