<template>
  <div class="mt-5 w-75 ms-auto me-auto">
    <h1>{{ model | plural_label_converter }}</h1>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAdd" @click="showAddModal">Dodaj</button>
    <table class="table">
      <thead>
        <tr>
          {% for attribute in model.non_connected_attributes -%}
          <th>{{ attribute | label_converter }}</th>
          {% endfor -%}
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr v-for="object in {{ model.list_variable }}" :key="object.id">
          {% for attribute in model.non_connected_attributes -%}
          {% if attribute.data_type == "LocalDateTime" -%}
            <td>{% raw %}{{{% endraw %} formatDate(object.{{ attribute.name }}) {% raw %}}}{% endraw %}</td>
          {% else -%}
            <td>{% raw %}{{{% endraw %} object.{{ attribute.name }} {% raw %}}}{% endraw %}</td>
          {% endif -%}
          {% endfor -%}
          <td>
            <button class="btn btn-primary me-2" @click="viewDetails(object.id)">Details</button>
            <button class="btn btn-secondary" @click="showUpdateModal(object)"
            data-bs-toggle="modal" data-bs-target="#modalUpdate">Update</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="modal fade" id="modalAdd" tabindex="-1" aria-labelledby="modalAddLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Dodaj nov Account</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div>
            {% for attribute in model.non_connected_attributes -%}
            {% if generate_label_add_modal(attribute) %}
            <label class="my-1">{{ attribute | label_converter }}</label>

            {% if attribute.data_type == "LocalDateTime" -%}
            <input type="date" class="form-control" placeholder="date" v-model="addForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "String" -%}
            <input type="text" class="form-control" v-model="addForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "Long" -%}
            <input type="number" class="form-control" v-model="addForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "Double" -%}
            <input type="number" class="form-control" v-model="addForm.{{ attribute.name }}" required>

            {% endif -%}
            {% endif -%}
            {% endfor %}
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-success" type="submit" @click="addObject">Add</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalUpdate" tabindex="-1" aria-labelledby="modalUpdateLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalAdd">Izmeni Account</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div>
            {% for attribute in model.non_connected_attributes -%}
            {% if generate_label_add_modal(attribute) %}
            <label class="my-1">{{ attribute | label_converter }}</label>

            {% if attribute.data_type == "LocalDateTime" -%}
            <input type="date" class="form-control" placeholder="date" v-model="updateForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "String" -%}
            <input type="text" class="form-control" v-model="updateForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "Long" -%}
            <input type="number" class="form-control" v-model="updateForm.{{ attribute.name }}" required>

            {% elif attribute.data_type == "Double" -%}
            <input type="number" class="form-control" v-model="updateForm.{{ attribute.name }}" required>

            {% endif -%}
            {% endif -%}
            {% endfor %}


          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="submit" @click="updateObject">Update</button>
        </div>
      </div>
    </div>
  </div>

</template>
<script>
import {{ model.class_name }}Service from '@/service/{{ model.class_name }}Service';
{% for attribute in model.connected_attributes -%}
import {{ attribute | attribute_class_name_converter }}Service from '@/service/{{ attribute | attribute_class_name_converter }}Service';
{% endfor %}

export default {
  data() {
    return {
      {{ model.list_variable }}: [],   // list of entities for display
      addForm: {},
      updateForm: {},
      {% for attribute in model.connected_attributes -%}
      {{ attribute | attribute_list_name_converter }}: [],
      {% if attribute_is_singular(attribute) -%}
      selected{{ attribute | attribute_class_name_converter }}: null,
      {% else -%}
      current{{ attribute | attribute_class_name_converter }}: [],
      newSelected{{ attribute | attribute_class_name_converter }}: null,
      {% endif %}
      {% endfor %}
    };
  },

  mounted() {
    this.load{{ model.list_class}}();
    {% for attribute in model.connected_attributes -%}
    this.load{{ attribute.name }}();
    {% endfor %}
  },

  methods: {
    load{{ model.list_class}}() {
      {{ model.class_name }}Service.getAll().then(res => {
        this.{{ model.list_variable }} = res.data;
      }).catch(err => {
        console.log(err);
      });
    },
    {% for attribute in model.connected_attributes %}
    load{{ attribute.name }}() {
      {{ attribute | attribute_class_name_converter }}Service.getAll().then(res => {
        this.{{ attribute | attribute_list_name_converter }} = res.data;
      }).catch(err => {
        console.log(err);
      });
    },
    {% endfor %}
    viewDetails(id) {
      this.$router.push({ name: '{{ model.class_name }}Details', params: { id } });
    },

    // Add section begin
    showAddModal() {
      this.isAddModalVisible = true;
    },

    closeAddModal() {
      document.getElementById('modalAdd').click();
    },

    addObject() {
      {%- for attribute in model.non_connected_attributes -%}
      {% if attribute.data_type == "LocalDateTime" -%}
      this.addForm.{{ attribute.name }} = new Date(this.addForm.{{ attribute.name }}).toISOString();
      {% endif %}
      {% endfor -%}

      {{ model.class_name }}Service.create(this.addForm).then(res => {
        this.{{ model.list_variable }}.push(res.data);
        this.resetForm();
        this.closeAddModal();
      }).catch(err => {
        console.log(err);
      });
    },
    // Add section end

    resetForm() {
      this.addForm = {};
      this.updateForm = {};
    },

    formatDate(date) {
      const year = date[0];
      const month = String(date[1]).padStart(2, '0');
      const day = String(date[2]).padStart(2, '0');
      const hour = String(date[3]).padStart(2, '0');
      const minute = String(date[4]).padStart(2, '0');

      const formattedDate = `${day}.${month}.${year}. ${hour}:${minute}`;
      return formattedDate
    },

  },
};
</script>
